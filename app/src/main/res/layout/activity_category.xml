<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context="com.example.android.singnin.Activities.LoginActivity">

    <ImageView
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/logologin"

        />

    <Button
        android:id="@+id/Documentation"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="421dp"
        android:background="#3e4a5b"
        android:clickable="true"
        android:text="ارشادت عامة للتصليح"
        android:textColor="@color/colorFormBackground"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/categories"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="255dp"
        android:background="#ec5d62"
        android:clickable="true"
        android:text="التواصل مع اقرب حرفي لك"
        android:textColor="@color/colorFormBackground"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="108dp" />

    <Button
        android:id="@+id/consaltant"
        android:layout_width="300dp"
        android:layout_height="50dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="334dp"
        android:background="#ec5d62"
        android:clickable="true"
        android:text="استشارات عامة للعربية"
        android:textColor="@color/colorFormBackground"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="108dp" />


</RelativeLayout>